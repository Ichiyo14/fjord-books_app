<% unless current_user == user %>
  <div id="follow_form">
  <% if current_user.following?(user) %>
    <%= form_with(model: [current_user, current_user.active_relationships.find_by(followed_id: user.id)],
            html: { method: :delete }, local: true) do |f| %>
             <div><%= hidden_field_tag :followed_id, user.id %></div> 
  <%= f.submit t('user_follow.button.unfollow'), class: "btn" %>
<% end %>
  <% else %>
    <%= form_with(model: [current_user,  Relationship.new], local: true) do |f| %>
 <div><%= hidden_field_tag :followed_id, user.id %></div> 
  <%= f.submit t('user_follow.button.follow'), class: "btn btn-primary" %>
<% end %>
  <% end %>
  </div>
<% end %>
