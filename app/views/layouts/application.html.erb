<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <p class="navbar-text pull-right">
  <% if user_signed_in? %>
    <%=t(:sign_in_with_provider, scope:'devise.shared.links', provider: current_user.email )%> |
    <%= link_to t(:title, scope:'devise.registrations.edit', resource: User.model_name.human), edit_user_registration_path, class: 'navbar-link' %> |
    <%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %> |
    <%= link_to t('user.list'), users_path, class: 'navbar-link'  %>
  <% else %>
    <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: 'navbar-link'  %> |
    <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'navbar-link'  %>
  <% end %>
</p>
    <%= yield %>
  </body>
</html>
