<p>
  <strong><%= Report.human_attribute_name(:user) %></strong>
  <%= @report.user.name %>
</p>
<p>
  <strong><%= Report.human_attribute_name(:created_date) %></strong>
  <%=l(@report.created_at.to_date, format: :long) %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:title) %></strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %></strong>
  <%= @report.content %>
</p>

<p>
  <%= render 'comments/comments', commentable: @report%>
</p>

<p>
  <%= render 'comments/form', commentable: @report%>
</p>

<%if @report.user == current_user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
  <%= link_to t('views.common.destroy'), @report, method: :delete, data: { confirm:  t('views.common.delete_confirm') } %> |
<%end%>
<%= link_to t('views.common.back'), reports_path %> |
<%= link_to User.human_attribute_name('reports',user:@report.user.name), user_reports_path(@report.user) %>
